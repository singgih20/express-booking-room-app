<!-- Modal -->
<div
  class="modal fade"
  id="edit-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update Bank</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form method="POST" action="/admin/bank?_method=PUT" enctype="multipart/form-data">
          <div class="form-group">
            <label for="nameBank">Name Bank</label>
            <input
              type="text"
              class="form-control nameBank"
              name="nameBank"
              placeholder="Enter name bank"
              id="nameBank"
              required
            />
          </div>
          <div class="form-group">
            <label for="nomorRekening">Nomor Rekening</label>
            <input
              type="text"
              class="form-control nomorRekening"
              name="nomorRekening"
              placeholder="Enter nomor rekening"
              id="nomorRekening"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="text"
              class="form-control name"
              name="name"
              placeholder="Enter name"
              id="name"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Image</label>
            <input
              type="file"
              class="form-control"
              name="image"
              id="name"
            />
            <span>Pilih gambar untuk update terbaru</span>
          </div>
        </div>
        <div class="modal-footer">
          <input type="text" name="id" class="id" />
            <button type="button" class="btn btn-secondary" data-dismiss="modal">
                Close
            </button>
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </form>
    </div>
  </div>
</div>
